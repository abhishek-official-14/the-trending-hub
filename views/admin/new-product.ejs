<h1>New Product</h1>
<form method="post" action="/admin/products">
  <input name="title" placeholder="Title" required /><br/>
  <input name="price" type="number" placeholder="Price" required /><br/>
  <input name="mrp" type="number" placeholder="MRP" /><br/>
  <input name="brand" placeholder="Brand" /><br/>
  <input name="category" placeholder="Category" /><br/>
  <textarea name="description" placeholder="Description"></textarea><br/>
  <input name="images" placeholder="Image URLs (comma separated)" /><br/>
  <button>Create</button>
</form>
